<div class="wrapper-primary text-center padded">
  <div class="container login">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <div class="login-form">
          <form action="#">
            <div class="form-group text-left">
              <label>Your email</label>
              <input type="email" class="form-control" placeholder="bob@gmail.com">
            </div>
            <div class="form-group text-left">
              <label>Your password</label>
              <input type="password" class="form-control" placeholder="b3st-p4ssw0rd-3v3r">
            </div>
            <div class="form-group">
              <input type="submit" value="Login" class="btn btn-primary btn-lg">
            </div>
          </form>
          <div class="text-left">
            <smaller class="forgot"><a href="#">I forgot my password</a></smaller>
            <smaller class="signin pull-right"><a href="#">Sign in</a></smaller>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
